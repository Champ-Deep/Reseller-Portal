# Lake B2B Reseller Portal - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@host:port/database_name"

# =============================================================================
# AUTHENTICATION
# =============================================================================
AUTH_SECRET="your-auth-secret-key-here"
AUTH_URL="http://localhost:4000"

# =============================================================================
# FILE UPLOAD
# =============================================================================
UPLOADCARE_PUBLIC_KEY="your-uploadcare-public-key"
UPLOADCARE_SECRET_KEY="your-uploadcare-secret-key"

# =============================================================================
# LAKE B2B API INTEGRATION (PRIMARY DATA SOURCE)
# =============================================================================
LAKE_B2B_API_KEY="your-lake-b2b-api-key"
LAKE_B2B_BASE_URL="https://api.lakeb2b.com/v1"

# Lake B2B Campaign Platform Integration
LAKE_B2B_CAMPAIGN_API_KEY="your-lake-b2b-campaign-api-key"
LAKE_B2B_CAMPAIGN_BASE_URL="https://campaigns.lakeb2b.ai/api/v1"

# =============================================================================
# SAMPLE REQUEST API (FOR SENDING ICPs TO YOUR TEAM)
# =============================================================================
# This is the API key your systems will use to authenticate requests from this portal
RESELLER_API_KEY="your-reseller-portal-api-key"
# Internal endpoint where ICP sample requests are sent
INTERNAL_SAMPLE_REQUEST_ENDPOINT="https://your-internal-api.com/sample-requests"

# =============================================================================
# DATA ENRICHMENT APIS (OPTIONAL)
# =============================================================================
EMAIL_CHECK_API_KEY="your-email-validation-api-key"
WHOIS_API_KEY="your-whois-api-key"
LOCAL_BUSINESS_DATA_API_KEY="your-local-business-api-key"
WEB_SCRAPER_API_KEY="your-web-scraper-api-key"
OPENAI_API_KEY="your-openai-api-key"
SEO_KEYWORD_API_KEY="your-seo-keyword-api-key"
GOOGLE_TRANSLATE_API_KEY="your-google-translate-api-key"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
FILE_CONVERTER_API_KEY="your-file-converter-api-key"
RESEND_API_KEY="your-resend-email-api-key"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REAL_TIME_ENRICHMENT="true"
ENABLE_BULK_PROCESSING="true"
ENABLE_AI_SUGGESTIONS="true"
ENABLE_PREMIUM_FEATURES="true"

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================
MAX_RECORDS_PER_BATCH="10000"
MAX_API_CALLS_PER_MINUTE="100"

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_ENV="development"

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET="your-webhook-secret"